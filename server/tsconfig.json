{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ES2020.BigInt", "ESNext", "ES2020"]
  },
  "include": ["lib"]
}
